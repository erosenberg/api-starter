{
  "name": "ball-roller-api",
  "version": "1.0.0",
  "author": "Eitan Rosenberg <eitanrosenberg@gmail.com>",
  "description": "A baseline starter API",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "dev:build": "babel src -d build --source-maps inline --copy-files --watch",
    "prod:build": "babel src -d build --copy-files",
    "dev:server": "env-cmd ../.env/dev.env nodemon --watch ./build ./build/index.js",
    "prod:server": "env-cmd ../.env/prod.env node ./build/index",
    "prod": "npm run clean && npm run prod:build && npm run prod:server",
    "dev": "npm-run-all --parallel clean dev:build dev:server"
  },
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify": "^0.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "concurrently": "^3.5.0",
    "env-cmd": "^7.0.0",
    "express": "^4.16.2",
    "fs": "^0.0.1-security",
    "lodash": "^4.17.4",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-0"
    ],
    "env": {
      "production": {
        "presets": [
          "minify"
        ]
      }
    },
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
